{% extends "DWDCsAdminBundle:Layout:layout.html.twig" %}

{% block body %}
<div class="ch-container">

    <div class="row">
        <div class="box col-md-15">
            <div class="box-inner">
                <div class="box-header well">
                    <h2><i class="glyphicon glyphicon-file"></i> {{ 'title.complaint_confirm'|trans }}</h2>
                </div> 
                <div class="box-content">
                    <form class="form-inline" role="form">

                        <div class="form-group has-feedback">
                            <label class="control-label" for="inputSuccess4">来源</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 用户投诉-领用问题
                        </div> <br /><br />
                    
                        <div class="form-group has-feedback">
                            <label class="control-label" for="inputSuccess4">标签</label>
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            {% for tagInfo in complaintTags['list'] %}
                                <button id="{{ tagInfo['alias'] }}" class="btn btn-default btn-sm complaint-label">{{ tagInfo['name'] }}</button>&nbsp;&nbsp;
                            {% endfor %} 
                        </div> <br /><br />
 
                        <div class="form-group has-feedback">
                            <label class="control-label">电话号码</label>&nbsp;&nbsp;
                            <input type="text" class="form-control">
                        </div> <br /><br />

                        <div class="form-group has-feedback">
                            <label class="control-label">投诉方式</label>&nbsp;&nbsp;
                            <label class="checkbox-inline">
                                <input type="checkbox" id="inlineCheckbox1" value="option1"> 客服电话 
                            </label>
                            <label class="checkbox-inline">
                                <input type="checkbox" id="inlineCheckbox1" value="option1"> 在线客服 
                            </label>
                            <label class="checkbox-inline">
                                <input type="checkbox" id="inlineCheckbox1" value="option1"> 其他 
                            </label> 
                        </div>  <br /><br />
 
                        <div class="form-group has-feedback">
                            <label class="control-label">平台</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <select id="selectPlatform" data-rel="chosen">
                                <option>IOS客户端</option>
                                <option>安卓客户端</option>
                                <option>h5客户端</option> 
                            </select>
                        </div> <br /><br />

                        <div class="form-group has-feedback">
                            <label class="control-label">活动</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <input type="text" class="form-control">
                        </div> <br /><br />

                        <div class="form-group has-feedback">
                            <label class="control-label">门店</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <input type="text" class="form-control">
                        </div> <br /><br />

                        <div class="form-group has-feedback">
                            <label class="control-label">跟进销售</label>&nbsp;&nbsp;
                            <input type="text" class="form-control">
                        </div> <br /><br />

                        <div class="form-group has-feedback">
                            <label class="control-label">备注</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <textarea class="autogrow"></textarea>
                        </div> <br /><br />

                        <div class="form-group has-feedback">
                            <label class="control-label">投诉状态</label>&nbsp;&nbsp;
                            <label class="checkbox-inline">
                                <input type="checkbox" id="inlineCheckbox1" value="option1"> 待跟进 
                            </label>
                            <label class="checkbox-inline">
                                <input type="checkbox" id="inlineCheckbox1" value="option1"> 已解决 
                            </label> 
                        </div>  <br /><br /><br /><br /><br />
                        <div class="form-group has-feedback" style="margin-left: 39%">
                            <button type="submit" id="confirm-btn" class="btn btn-primary">确认提交</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>  

</div>

<script type="text/javascript" >
    var complaint           = new Object();
    complaint.from          = '';
    complaint.tags          = [];
    complaint.tel           = '';
    complaint.complaint_way = 2;
    complaint.platform      = 0;
    complaint.activity      = '';
    complaint.branch        = '';
    complaint.saler_id      = '';
    complaint.note          = '';
    complaint.status        = 0;

    var tags = [];
    $(document).ready(function() {
        $(".complaint-label").click(function (e) {

            if( $(this).hasClass("btn-default") ){
                $(this).removeClass("btn-default");
                $(this).addClass("btn-primary");
                tags.push( $(this).attr("id") );
            } else {
                $(this).removeClass("btn-primary"); 
                $(this).addClass("btn-default");
                tags.splice($.inArray($(this).attr("id"),tags),1);
            }

            return false;
        });


        {% for tagAlias in autoSelectTags %}
            $("#{{tagAlias}}").removeClass("btn-default");
            $("#{{tagAlias}}").addClass("btn-primary");
            tags.push( $("#{{tagAlias}}").attr("id") );
        {% endfor %}


        $("#confirm-btn").click(function (e) {
            
        });
    });
</script>
{% endblock %}