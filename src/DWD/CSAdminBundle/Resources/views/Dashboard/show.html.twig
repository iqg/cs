{% extends 'DWDCsAdminBundle:Layout:layout.html.twig' %}

{% block body %}
    <h1>{{ product.name }}</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>{{ 'label.price'|trans }}</th>
            <td>{{ product.price }}</td>
        </tr>
        <tr>
            <th>{{ 'label.description'|trans }}</th>
            <td>{{ product.description }}</td>
        </tr>
        </tbody>
    </table>
{% endblock %}